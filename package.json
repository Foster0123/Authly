{
    "name": "authly",
    "version": "1.0.0",
    "description": "Full Featured Web Application on Pug, Express, Node, PostgreSQL",
    "main": "gulpfile.js",
    "scripts": {
        "start": "node ./src/app.js",
        "dev": "nodemon ./src/app.js",
        "watch": "sass --watch src/client/assets/scss/main.scss src/client/assets/css/main.css",
        "scss": "sass src/client/assets/scss/main.scss src/client/assets/css/main.css",
        "pcss": "postcss src/client/assets/css/*.css -o build/css/main.min.css",
        "stylelint": "stylelint src/client/assets/scss/**/*.scss --config --fix",
        "babel": "babel src/client/assets/js/ -d build/js/",
        "uglify": "uglifyjs src/client/assets/js/main.js --mangle --compress --source-map --output build/js/main.min.js",
        "clean": "trash build/css/main.css build/css/main.css.map build/js/main.js build/main.js.map tmp/*",
        "lint:node": "eslint --fix src/app/**/*.js src/app.js",
        "lint:pug": "gulp lint",
        "lint:scss": "yarn stylelint",
        "lint:js": "eslint src/client/assets/js/**/*.js",
        "lint:all": "yarn lint:node & yarn lint:pug & yarn lint:scss * yarn lint:js",
        "prettier:node": "prettier --write src/app/** src/app.js",
        "prettier:pug": "prettier --write src/client/views/**/*.pug",
        "prettier:scss": "prettier --write src/client/assets/scss/**",
        "prettier:js": "prettier --write src/client/assets/js/**",
        "prettier:all": "yarn prettier:node & yarn prettier:pug & yarn prettier:scss & yarn prettier:js",
        "build:pug": "yarn lint:pug & yarn prettier:pug & yarn clean",
        "build:node": "yarn lint:node & yarn prettier:node",
        "build:css": "yarn lint:scss & yarn prettier:scss & yarn scss & yarn pcss & yarn clean",
        "build:js": "yarn lint:js & yarn prettier:js & yarn babel & yarn uglify & yarn clean",
        "build:image": "yarn imagemin src/client/assets/images/* --out-dir=build/images/",
        "build": "yarn lint:all & yarn prettier:all & yarn build:node & yarn build:pug & yarn build:css & yarn build:js & yarn build:image & yarn clean"
    },
    "keywords": [],
    "author": "Foss",
    "license": "ISC",
    "dependencies": {
        "cloudinary": "^1.32.0",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "express-validator": "^6.14.2",
        "pg": "^8.8.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.19.3",
        "@babel/core": "^7.20.2",
        "@babel/preset-env": "^7.20.2",
        "@fullhuman/postcss-purgecss": "^5.0.0",
        "@gabegabegabe/pug-lint-config": "^1.1.0",
        "@prettier/plugin-pug": "^2.3.0",
        "autoprefixer": "^10.4.13",
        "concurrently": "^7.6.0",
        "cssnano": "^5.1.14",
        "cssnano-preset-default": "^5.2.13",
        "eslint": "^8.28.0",
        "eslint-config-prettier": "^8.5.0",
        "gulp": "^4.0.2",
        "gulp-pug-lint": "^0.1.6",
        "imagemin-cli": "^7.0.0",
        "jpegtran": "^2.0.0",
        "jpegtran-bin": "^7.0.0",
        "nodemon": "^2.0.20",
        "postcss": "^8.4.19",
        "postcss-cli": "^10.0.0",
        "postcss-reporter": "^7.0.5",
        "postcss-scss": "^4.0.5",
        "prettier": "^2.7.1",
        "prettier-config-standard": "^5.0.0",
        "pug": "^3.0.2",
        "puglint-stylish": "^1.1.0",
        "sass": "^1.56.1",
        "stylelint": "^14.15.0",
        "stylelint-config-standard": "^29.0.0",
        "stylelint-order": "^5.0.0",
        "trash-cli": "^5.0.0",
        "uglify-js": "^3.17.4"
    }
}
