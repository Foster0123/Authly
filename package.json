{
    "name": "authly",
    "version": "1.0.0",
    "description": "Full Featured Web Application on Pug, Express, Node, PostgreSQL",
    "scripts": {
        "start": "node ./src/app.js",
        "dev:server": "nodemon ./src/app.js",
        "scss": "parcel build src/client/assets/scss/main.scss --dist-dir src/app/ui/assets/css --public-url ./ --cache-dir tmp/.parcel-cache",
        "js": "parcel build src/client/assets/js/*.js --dist-dir src/app/ui/assets/js/ --public-url ./ --cache-dir tmp/.parcel-cache",
        "images": "parcel build src/client/assets/img/*.{jpg,png,svg,webp,avif,gif} --dist-dir src/app/ui/assets/img/ --public-url ./ --cache-dir tmp/.parcel-cache --reporter parcel-reporter-static-files-copy",
        "dev:client": "parcel watch src/client/assets/scss/main.scss --dist-dir src/client/assets/css/ --cache-dir tmp/.parcel-cache --no-content-hash",
        "build": "yarn scss & yarn js & yarn images",
        "test": "jest",
        "e2e": ""
    },
    "keywords": [
        "Authly",
        "PostgreSQL",
        "NodeJS",
        "ExpressJS",
        "Pug Template Engine"
    ],
    "author": "Foss",
    "license": "ISC",
    "staticFiles": {
        "staticPath": "src/client/public",
        "distDir": "src/app/ui"
    },
    "dependencies": {
        "cloudinary": "^1.33.0",
        "connect-pg-simple": "^8.0.0",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "express-session": "^1.17.3",
        "express-validator": "^6.14.2",
        "passport": "^0.6.0",
        "pg": "^8.8.0",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.20.7",
        "@babel/core": "^7.20.7",
        "@babel/preset-env": "^7.20.2",
        "@fullhuman/postcss-purgecss": "^5.0.0",
        "@parcel/config-default": "^2.8.2",
        "@parcel/core": "^2.8.1",
        "@parcel/transformer-pug": "^2.8.2",
        "@parcel/transformer-sass": "2.8.2",
        "@prettier/plugin-pug": "^2.3.0",
        "autoprefixer": "^10.4.13",
        "cssnano": "^5.1.14",
        "cssnano-preset-default": "^5.2.13",
        "eslint": "^8.31.0",
        "eslint-config-prettier": "^8.5.0",
        "jest": "^29.3.1",
        "jest-environment-jsdom": "^29.3.1",
        "nodemon": "^2.0.20",
        "parcel": "^2.8.2",
        "parcel-reporter-static-files-copy": "^1.4.0",
        "postcss": "^8.4.20",
        "postcss-cli": "^10.1.0",
        "postcss-scss": "^4.0.6",
        "prettier": "^2.8.1",
        "prettier-config-standard": "^5.0.0",
        "pug": "^3.0.2",
        "sass": "^1.57.1",
        "stylelint": "^14.16.1",
        "stylelint-config-standard": "^29.0.0",
        "stylelint-order": "^5.0.0"
    }
}
