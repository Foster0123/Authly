{
    "name": "authly",
    "version": "1.0.0",
    "description": "Full Featured Web Application on Pug, Express, Node, PostgreSQL",
    "scripts": {
        "start": "node ./src/app.js",
        "dev:server": "nodemon ./src/app.js",
        "scss": "parcel build src/client/assets/scss/main.scss --dist-dir src/app/ui/assets/css --public-url ./ --cache-dir tmp/.parcel-cache",
        "js": "parcel build src/client/assets/js/*.js --dist-dir src/app/ui/assets/js/ --public-url ./ --cache-dir tmp/.parcel-cache",
        "images": "parcel build src/client/assets/img/*.{jpg,png,svg,webp,avif,gif} --dist-dir src/app/ui/assets/img/ --public-url ./ --cache-dir tmp/.parcel-cache --reporter parcel-reporter-static-files-copy",
        "dev:client": "parcel watch src/client/assets/scss/main.scss --dist-dir src/client/assets/css/ --cache-dir tmp/.parcel-cache --no-content-hash",
        "build": "yarn scss & yarn js & yarn images",
        "format": "prettier --write ./src/**/*.js ./src/**/*.pug ./src/**/*.css ./src/**/*.scss",
        "lint": "stylelint --fix ./src/client/assets/scss/**/*.scss && eslint ./src/**/*.js",
        "test": "jest",
        "e2e": ""
    },
    "keywords": [
        "Authly",
        "PostgreSQL",
        "NodeJS",
        "ExpressJS",
        "Pug"
    ],
    "author": "Foss",
    "license": "ISC",
    "staticFiles": {
        "staticPath": "src/client/public",
        "distDir": "src/app/ui"
    },
    "dependencies": {
        "bcrypt": "^5.1.0",
        "connect-pg-simple": "^8.0.0",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "express-fileupload": "^1.4.0",
        "express-session": "^1.17.3",
        "express-validator": "^6.15.0",
        "googleapis": "^113.0.0",
        "imagekit": "^4.1.2",
        "multer": "^1.4.5-lts.1",
        "nodemailer": "^6.9.1",
        "pg": "^8.10.0",
        "pug": "^3.0.2",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.21.0",
        "@babel/core": "^7.21.3",
        "@babel/preset-env": "^7.20.2",
        "@fullhuman/postcss-purgecss": "^5.0.0",
        "@parcel/config-default": "^2.8.3",
        "@parcel/core": "^2.8.3",
        "@parcel/transformer-pug": "^2.8.3",
        "@parcel/transformer-sass": "2.8.3",
        "@prettier/plugin-pug": "^2.4.1",
        "autoprefixer": "^10.4.14",
        "cssnano": "^5.1.15",
        "cssnano-preset-default": "^5.2.14",
        "eslint": "^8.36.0",
        "eslint-config-prettier": "^8.7.0",
        "jest": "^29.5.0",
        "jest-environment-jsdom": "^29.5.0",
        "nodemon": "^2.0.21",
        "parcel": "^2.8.3",
        "parcel-reporter-static-files-copy": "^1.5.0",
        "postcss": "^8.4.21",
        "postcss-cli": "^10.1.0",
        "postcss-scss": "^4.0.6",
        "prettier": "^2.8.4",
        "prettier-config-standard": "^5.0.0",
        "sass": "^1.59.3",
        "stylelint": "^15.3.0",
        "stylelint-config-standard": "^31.0.0",
        "stylelint-order": "^6.0.3"
    }
}
