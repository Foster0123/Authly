{
    "name": "authly",
    "version": "1.0.0",
    "description": "Full Featured Web Application on Pug, Express, Node, PostgreSQL",
    "scripts": {
        "start": "node ./src/app.js",
        "dev:server": "nodemon ./src/app.js",
        "scss": "parcel build src/client/assets/scss/main.scss --dist-dir src/app/ui/assets/css --public-url ./ --cache-dir tmp/.parcel-cache",
        "js": "parcel build src/client/assets/js/*.js --dist-dir src/app/ui/assets/js/ --public-url ./ --cache-dir tmp/.parcel-cache",
        "images": "parcel build src/client/assets/img/*.{jpg,png,svg,webp,avif,gif} --dist-dir src/app/ui/assets/img/ --public-url ./ --cache-dir tmp/.parcel-cache --reporter parcel-reporter-static-files-copy",
        "dev:client": "parcel watch src/client/assets/scss/main.scss --dist-dir src/client/assets/css/ --cache-dir tmp/.parcel-cache --no-content-hash",
        "build": "npm run scss & npm run js & npm run images",
        "format": "prettier --write ./src/**/*.js ./src/client/views/**/*.pug ./src/**/*.css ./src/**/*.scss",
        "lint": "stylelint --fix ./src/client/assets/scss/**/*.scss && eslint ./src/**/*.js",
        "test": "jest",
        "e2e": ""
    },
    "keywords": [
        "Authly",
        "PostgreSQL",
        "NodeJS",
        "ExpressJS",
        "Pug"
    ],
    "author": "Foss",
    "license": "ISC",
    "staticFiles": {
        "staticPath": "src/client/public",
        "distDir": "src/app/ui"
    },
    "dependencies": {
        "bcrypt": "^5.1.0",
        "connect-pg-simple": "^8.0.0",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "express-fileupload": "^1.4.0",
        "express-session": "^1.17.3",
        "express-validator": "^7.0.1",
        "googleapis": "^118.0.0",
        "imagekit": "^4.1.3",
        "jsonwebtoken": "^9.0.0",
        "nodemailer": "^6.9.1",
        "pg": "^8.10.0",
        "pug": "^3.0.2",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@parcel/config-default": "^2.8.3",
        "@parcel/core": "^2.8.3",
        "@parcel/transformer-sass": "^2.8.3",
        "@prettier/plugin-pug": "^2.4.2",
        "eslint": "^8.39.0",
        "eslint-config-prettier": "^8.8.0",
        "jest": "^29.5.0",
        "nodemon": "^2.0.22",
        "parcel": "^2.8.3",
        "parcel-reporter-static-files-copy": "^1.5.0",
        "postcss": "^8.4.23",
        "postcss-scss": "^4.0.6",
        "prettier": "^2.8.8",
        "sass": "^1.62.0",
        "stylelint": "^15.6.0",
        "stylelint-config-standard": "^33.0.0",
        "stylelint-order": "^6.0.3"
    }
}
