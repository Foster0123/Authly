extends ../templates/base.pug
block title
    title Authly

block navbar
    include ../shared/navbar.pug
block content
    .index-page-container 
        |
        |
        |
        |
        |
        if notfify
            .notification.is-info.is-light
                button#notification-close-button.delete
                p You Are Successfully Logged Out Of Your Account
                a(href='/signin') Log In Again
        .index 
            |
            |
            |
            |
            |
            .index-header
                h1.is-size-1 Authly
                h3.is-size-4 An Authentication Application Built Using Pug Template Engine, NodeJS, ExpressJS & PostgreSQL
            .index-content 
                |
                |
                |
                |
                |
                img(
                    src='./img/application/authly.png',
                    alt='Authly Logo Image'
                )
            .index-get-started 
                |
                |
                |
                |
                |
                button
                    a(href='/signup') Get Started
block script
    script(src='./js/index.js')
