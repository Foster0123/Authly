extends ../templates/base.pug
block title
    title Login
block content
    .form-container
        .field 
            h1.is-size-1 Login
        .field
            label.label Email
            .control.has-icons-left.has-icons-right
                input.input.is-link(type='email', placeholder='Email input')
                span.icon.is-small.is-left
                    i.fas.fa-envelope
        .field
            label.label Password
            .control.has-icons-left.has-icons-right
                input.input.is-link(type='password', placeholder='Password')
                span.icon.is-small.is-left
                    i.bi.bi-key
                span.icon.is-small.is-right
                    i.fas.fa-eye-slash(style='cursor: pointer; z-index: 2')
        .field.has-text-centered
            label.checkbox(style="margin-top:5px;")
                input(type='checkbox')
                |  Remember Me
            .control
                span 
                    p
                        | First Time Here ? 
                        a(href="/signup") 
                            | Register 
        .field.is-grouped
            .control
                button.button.is-link Login
