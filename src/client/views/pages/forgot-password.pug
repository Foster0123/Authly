doctype html
html(lang='en')
    head
        meta(charset='UTF-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        title Forgot Password
        link(
            rel='stylesheet',
            href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css'
        )
        link(
            rel="stylesheet" 
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" 
            integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" 
            crossorigin="anonymous" 
            referrerpolicy="no-referrer"
        )
        link(rel="stylesheet" href='https://cdnjs.cloudflare.com/ajax/libs/bulma/0.9.4/css/bulma.min.css')
        link(rel="stylesheet" href="./css/main.css")
            
    body
        .fp-container
            form.fp-form(action='/forgot-password', method='POST')
                h1.fp-header.is-size-4 Forgot Password
                .fp-input
                    input.input(type="email", required=true, name="password_reset_email" placeholder="Enter Your Email")
                    button.button.is-success.fp-button(type="submit") Send Reset URL
        include ../shared/footer.pug