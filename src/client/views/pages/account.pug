extends ../templates/base.pug
block title
    title Account
block content
    section(style='background-color: #eee;')
    .container.py-5
        .row
            .col-lg-6
                .card.mb-6.m-2
                    .card-body.text-center
                        img.rounded-circle.img-fluid(src='https://www.iconpacks.net/icons/2/free-user-icon-3296-thumb.png' alt='avatar' style='width: 150px; ')
                        h5.my-3 John Smith
                        p.text-muted.mb-1 Full Stack Developer
                        p.text-muted.mb-4 Bay Area, San Francisco, CA
                .card.mb-6.mb-lg-0.m-2
                    .card-body.p-0
                        ul.list-group.list-group-flush.rounded-3
                            li.list-group-item.d-flex.justify-content-between.align-items-center.p-3
                                i.bi.bi-globe.text-warning
                                p.mb-0 PLACEHOLDER
                            li.list-group-item.d-flex.justify-content-between.align-items-center.p-3
                                i.bi.bi-github(style='color: #333333;')
                                p.mb-0 PLACEHOLDER
                            li.list-group-item.d-flex.justify-content-between.align-items-center.p-3
                                i.bi.bi-twitter(style='color: #55acee;')
                                p.mb-0 PLACEHOLDER
                            li.list-group-item.d-flex.justify-content-between.align-items-center.p-3
                                i.bi.bi-instagram(style='color: #ac2bac;')
                                p.mb-0 PLACEHOLDER
                            li.list-group-item.d-flex.justify-content-between.align-items-center.p-3
                                i.bi.bi-facebook(style='color: #3b5998;')
                                p.mb-0 PLACEHOLDER
            .col-lg-6
                .card.mb-6.m-2
                .card-body
                    .row.align-items-center
                        .col-sm-3.d-flex.align-items-center
                            i.bi.bi-person.fs-3.p-1
                            |Name
                        .col-sm-9
                            p.text-muted.mb-0 Johnathan Smith
                    hr
                    .row.align-items-center
                        .col-sm-3.d-flex.align-items-center
                            i.bi.bi-envelope.fs-3.p-1
                            |Email
                        .col-sm-9
                            p.text-muted.mb-0 example@example.com
                    hr
                    .row.align-items-center
                        .col-sm-3.d-flex.align-items-center
                            i.bi.bi-phone.fs-3.p-1
                            |Phone
                        .col-sm-9
                            p.text-muted.mb-0 (097) 234-5678
                    hr
                    .row.align-items-center.justify-content-between
                        .col-sm-3.d-flex.align-items-center
                            i.bi.bi-key.fs-3.p-1
                            | Password
                        .col-sm-9.my-1
                            input.form-control(type="password" placeholder="Type Current Password")

                        .col-sm-3.d-flex.align-items-center
                        .col-sm-9.my-1
                            input.form-control(type="password" placeholder="Type New Password")

                        .col-sm-3.d-flex.align-items-center
                        .col-sm-9.my-1
                            input.form-control(type="password" placeholder="Repeat Password")