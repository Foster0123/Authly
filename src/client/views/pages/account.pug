extends ../templates/base.pug
block title
    title Account
block content
    section
        .container-fluid.py-5
            .row.gx-3
                .col-lg-6
                    .mb-6.m-2.text-center.p-5.border.rounded-2.d-flex.justify-content-center.flex-column.align-items-center
                        .profile-container(style='margin: 0')
                            img#profile-pic.rounded-circle.img-fluid(
                                src='https://www.iconpacks.net/icons/2/free-user-icon-3296-thumb.png',
                                alt='avatar',
                                style='width: 150px'
                            )
                            label(for='avatar')
                                i.bi.bi-camera
                            input#avatar.d-none(type='file')
                        h5.my-3 John Smith
                        p.text-muted.mb-1 Full Stack Developer
                        p.text-muted.mb-4 Bay Area, San Francisco, CA

                    .mb-6.m-2.border.rounded-2
                        ul
                            li.d-flex.justify-content-between.align-items-center.p-3
                                i.fas.fa-globe.fa-lg.text-warning
                                p.mb-0 https://mdbootstrap.com
                            li.d-flex.justify-content-between.align-items-center.p-3
                                i.fab.fa-github.fa-lg(style='color: #333333')
                                p.mb-0 mdbootstrap
                            li.d-flex.justify-content-between.align-items-center.p-3
                                i.fab.fa-twitter.fa-lg(style='color: #55acee')
                                p.mb-0 @mdbootstrap
                            li.d-flex.justify-content-between.align-items-center.p-3
                                i.fab.fa-instagram.fa-lg(
                                    style='color: #ac2bac'
                                )
                                p.mb-0 mdbootstrap
                            li.d-flex.justify-content-between.align-items-center.p-3
                                i.fab.fa-facebook-f.fa-lg(
                                    style='color: #3b5998'
                                )
                                p.mb-0 mdbootstrap
                .col-lg-6
                    .mb-6.m-2.p-5.border.rounded-2
                        .row.align-items-center
                            .col-sm-3.d-flex.align-items-center
                                i.bi.bi-person.fs-3.p-1
                                | Name
                            .col-sm-9
                                p.text-muted.mb-0 Johnathan Smith
                        hr
                        .row.align-items-center
                            .col-sm-3.d-flex.align-items-center
                                i.bi.bi-envelope.fs-3.p-1
                                | Email
                            .col-sm-9
                                p.text-muted.mb-0 example@example.com
                        hr
                        .row.align-items-center
                            .col-sm-3.d-flex.align-items-center
                                i.bi.bi-phone.fs-3.p-1
                                | Phone
                            .col-sm-9
                                p.text-muted.mb-0 (097) 234-5678
                        hr
                        .row.align-items-center.justify-content-between
                            .col-sm-3.d-flex.align-items-center
                                i.bi.bi-key.fs-3.p-1
                                | Password
                            .col-sm-9.my-1
                                input.form-control(
                                    type='password',
                                    placeholder='Type Current Password'
                                )

                            .col-sm-3.d-flex.align-items-center
                            .col-sm-9.my-1
                                input.form-control(
                                    type='password',
                                    placeholder='Type New Password'
                                )

                            .col-sm-3.d-flex.align-items-center
                            .col-sm-9.my-1
                                input.form-control(
                                    type='password',
                                    placeholder='Repeat Password'
                                )
